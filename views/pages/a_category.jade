extends ../admin_layout

block content
  
  div.container(style='margin-top:50px;')
    div.toolbar
      span 分类管理 》
      a#addCategory(data-toggle="modal") 添加分类
    
    div
      table.table.table-hover.table-bordered
        thead
          tr
            th 标题
            th 分类
            th 操作
        tbody
          each item in categoryList
            tr
              td 
                a(href='/admin/category/#{item.id}') #{item.id}
              td #{item.name}
              td 
                
                a.modify(target='#{item.id}', targetcname='#{item.name}') 修改
                span.table-span |
                a.delete(target='#{item.id}') 删除

    div.row          
      div.col-xs-12.center
        include ../include/pageing.jade

 
  #myModal.modal.fade.in(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') ×
          h4#exampleModalLabel.modal-title 添加分类
        .modal-body
          form.form-horizontal#category_form(role="form",action="/admin/category/add",method="post")
            .form-group
              label.col-sm-2.control-label(for='name') 名称
              .col-sm-10
                input#cname.form-control(type='text', name="cname" placeholder='名称')
                input#categoryId(type='hidden', name='categoryId', value='')


        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') 关闭
          button.btn.btn-primary#submit(type='button') 提交
         
  
  script.

    $(document).ready(function(){
      
      $('#addCategory').on('click', function () {

        $('#myModal').modal({backdrop: true});

        $('#cname').focus();
      });

      //提交
      $('#submit').bind('click', function () {


        $('#category_form').submit();
      });


      //修改
      $(".modify").bind('click', function () {


        $('#myModal').modal({backdrop: true});


        $('#cname').val($(this).attr("targetcname"));
        $('#categoryId').val($(this).attr("target"));

      });

      //delete
      $(".delete").bind('click', function () {

        $('#cname').val($(this).attr("targetcname"));
        $('#categoryId').val($(this).attr("target"));

      });


    })
  



